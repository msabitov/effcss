{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es2022",
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "removeComments": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": "src",
        "declaration": true,
        "declarationDir": "./dist/types",
        "lib": ["esnext", "DOM", "dom.iterable"]
    },
    "exclude": ["node_modules", "dist", "demo"]
}
